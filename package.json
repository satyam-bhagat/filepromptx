{
  "name": "filepromptx",
  "displayName": "filepromptx",
  "description": "Generate AI-ready prompts from selected files and folders with full project context.",
  "version": "0.0.2",
  "publisher": "SatyamBhagat",
   "license": "MIT",
   "icon": "media/icon.png",

   "repository": {
    "type": "git",
    "url": "https://github.com/satyam-bhagat/fileprompt"
  },
  "engines": { "vscode": "^1.80.0" },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileprompt-sidebar",
          "title": "FilePrompt",
          "icon": "$(file-code)"
        }
      ]
    },
    "views": {
      "fileprompt-sidebar": [
        {
          "type": "webview",
          "id": "fileprompt-sidebar-view",
          "name": "Prompt Generator"
        }
      ]
    },
    "commands": [
      { "command": "fileprompt.copyAsPrompt", "title": "Copy as AI Prompt" }
    ]
  },
 "scripts": {
  "vscode:prepublish": "npm run bundle",
  "bundle": "node esbuild.js",
  "watch": "node esbuild.js --watch",
  "compile": "tsc -p ./"
},
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.1.3"
  }
}